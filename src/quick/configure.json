{
    "module": "quick",
    "depends": [
        "qml-private",
        "gui-private"
    ],

    "commandline": {
        "options": {
            "d3d12": "boolean",
            "quick-canvas": "boolean"
        }
    },

    "tests": {
        "d3d12": {
            "label": "Direct3D 12",
            "type": "compile",
            "test": "d3d12"
        }
    },

    "features": {
        "d3d12": {
            "label": "Direct3D 12",
            "purpose": "Provides a Direct3D 12 backend for the Qt Quick Scenegraph",
            "condition": "tests.d3d12",
            "output": [
                "privateFeature"
            ]
        },
        "quick-canvas": {
            "label": "Canvas item",
            "purpose": "Provides the Qt Quick Canvas Item",
            "output": [
                "privateFeature"
            ]
        }
    },

    "summary": [
        {
            "section": "Qt Quick",
            "entries": [
                "d3d12",
                "quick-canvas"
            ]
        }
    ]
}
